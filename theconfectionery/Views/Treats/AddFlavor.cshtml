@{
  Layout = "_Layout";
}

@model TheConfectionery.Models.Treat

<h2>Add a Flavor</h2>

<h4>Add a Flavor to this Treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    <p>Select a Flavor: @Html.DropDownList("FlavorId")</p>
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>