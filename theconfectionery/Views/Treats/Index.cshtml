@{
  Layout = "_Layout";
}

@using TheConfectionery.Models;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a new Treat", "Create")</p>


@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  
  <p>@Html.ActionLink("View my treats", "MyRecipes")</p>
}