@{
  Layout = "_Layout";
}

@using TheConfectionery.Models;

<h1>@User.Identity.Name's Treats</h1>

@if (@Model.Count == 0)
{
  <h3>You have not created any treats yet!</h3>
} 

<ul>
  @foreach(Treat treat in Model)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })</li>
  }
</ul>

<p>@Html.ActionLink("Createa new Flavor", "Create", "Flavors")</p>
<p>@Html.ActionLink("Create a new Treat", "Create")</p>
<p>@Html.ActionLink("List of everyones Treats", "Index")</p>
