@{
  Layout = "_Layout";
}

@using TheConfectionery.Models;

<h1>@User.Identity.Name's Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>You have not created any Flavors yet!</h3>
} 

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>

<p>@Html.ActionLink("Createa new Flavor", "Create")</p>
<p>@Html.ActionLink("Create a new Treat", "Create", "Treats")</p>
<p>@Html.ActionLink("List of everyones Treats", "Index")</p>
